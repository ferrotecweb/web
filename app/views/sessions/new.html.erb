<style type="text/css">
  .price{ padding: 0px 0px 10px 100px;font-size:12px; }
  ul { list-style:none; margin:10px; }
  li { padding: 5px; }
  input { width:200px; }
  span input {width:100px;}
  h2 {padding:0px 0px 0px 35px;margin:0px;font-size:20px;}
</style>
<div class='price'>
<h2>登录后才可以查询价格</h2>
<% form_tag sessions_path do %>
    <ul>
      <li>
        <label>姓名:</label>
        <%= text_field_tag 'name' %>
      </li>
      <li>
        <label>密码:</label>
        <%= password_field_tag 'password' %>
      </li>
      <li>
        <span style='padding-left:100px;'><%=submit_tag '登录'%></span>
      </li>
    </ul>
<% end %>
</div>
