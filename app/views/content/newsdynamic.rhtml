<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN"> 
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=gb2312" />
<title><%=@title%></title>
<%= stylesheet_link_tag 'content' %>
</head>
<body>
  <div id="yylybanner"><%=@title%></div>
  <div class="clear"></div>
  <div id="newcontent">
    <ul id="newstitle">
    <% if @newslist.size > 0 %>
    <% for newslist in @newslist %>
    <li>
      <a onmousemove="this.style['color']='#ff0000'" onmouseout="this.style['color']='#3B6F9F'" style="cursor:pointer;color:#3B6F9F" onClick='window.open("/content/newsdetail?id=<%=newslist.id%>","","scrollbars=yes,width=600,height=360,top=200,resizable=yes")'>
      <% if !newslist.issuedate.blank? %>
      <span id="date"><%= h(newslist.issuedate.strftime("%Y-%m")) %></span>
      <% end %>
      <span id="title"><%=newslist.title%></span>
      </a>
    </li> 
    <% end %>
    <% else %>
    <li><span id="title">当前无信息</span></li>
    <% end %>
    </ul>
  </div>
  <div id="fy1">
    <%= will_paginate @newslist,
    :inner_window => 1,
    :outer_window => 1,
    :prev_label => '上一页',
    :next_label => '下一页'
    %>
  </div>
</body>
</html>
