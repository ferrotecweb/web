<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN"> 
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=gb2312" />
<title>新闻中心</title>
<%= stylesheet_link_tag 'content' %>
</head>

<body>
  <div id="yylybanner">新闻中心</div>
  <div class="clear"></div>
  <div id="news">
  <div id="newscenter">【最新新闻动态】</div>
  <div id="newscenter2">
    <ul id="newscenter3">
    <% for newscenter in @newscenter %>
    <li>
      <a onmousemove="this.style['color']='#ff0000'" onmouseout="this.style['color']='#3B6F9F'" style="cursor:pointer;color:#3B6F9F" onClick='window.open("newsdetail?id=<%=newscenter.id%>","","scrollbars=yes,width=600,height=360,top=200,resizable=yes")'>
      <% if !newscenter.issuedate.blank?  %>
      <span id="newscenter4"><%= h(newscenter.issuedate.strftime("%Y-%m")) %></span>
      <% else %>
      <span id="newscenter4"></span>
      <% end %>
      <span id="newscenter5"><%=newscenter.title%></span>
      </a>
    </li> 
    <% end %>
    </ul>
  </div>
  
  <div id="newscenter">【最新技术动态】</div>
  <div id="newscenter2">
    <ul id="newscenter3">
    <% for technology in @technology %>
    <li>
      <a onmousemove="this.style['color']='#ff0000'" onmouseout="this.style['color']='#3B6F9F'" style="cursor:pointer;color:#3B6F9F" onClick='window.open("newsdetail?id=<%=technology.id%>","","scrollbars=yes,width=600,height=360,top=200,resizable=yes")'>
      <% if !technology.issuedate.blank? %>
      <span id="newscenter4"><%= h(technology.issuedate.strftime("%Y-%m")) %></span>
      <% else %>
      <span id="newscenter4"></span>
      <% end %>
      <span id="newscenter5"><%=technology.title%></span>
      </a>
    </li> 
    <% end %>
    </ul>
  </div>
  <!--线-->
  <div id="cpdl3"></div>

  <% for news in @news %>
  <div id="newscenter6">
    <a onclick="showmenu('<%=news.categoryid%>','<%=news.url%>')" onmousemove="this.style['color']='#ff0000'" onmouseout="this.style['color']='#3B6F9F'" style="cursor:pointer;color:#3B6F9F"><p><%=news.categoryname%>&raquo;</p></a>
    <p><%=news.summary%></p>
  </div>
  <% end %>

   <div id="newscenter6">
     <p>对于媒体询问，电子邮件<a href="mailto:'ferrotec@ferrotec.com.cn'" onmousemove="this.style['color']='#ff0000'" onmouseout="this.style['color']='#3B6F9F'" style="cursor:pointer;color:#3B6F9F">ferrotec@ferrotec.com.cn</a></p>
  </div> 
  </div>
  
<script language="JavaScript" type="text/JavaScript">
//主菜单单击事件
function showmenu(paremenuID,url)
{ 
    //主菜单变色
    parent.document.getElementById("menutop2").style.color='#000000';
    parent.document.getElementById("menutop2").style.backgroundImage='url(/images/memu_r9_c1.jpg)';
   
    if (paremenuID.length > 6)
    {
        parent.init2(); 
        //菜单变色
        parent.document.getElementById(paremenuID).style.backgroundImage='url(/images/memu_r5_c1.jpg)';
        parent.clickCID = paremenuID;    
    }
    else
    {
        //展开菜单并更换颜色
        parent.document.getElementById(paremenuID).style.backgroundImage='url(/images/memu_r2_c1.jpg)';
        parent.document.getElementById("child"+paremenuID).style.display = "";
        parent.clickPID = paremenuID;
    }
    
    //转到链接
    parent.document.getElementById(paremenuID).style.color='#FFFFFF';
    parent.document.getElementById("frame1").src = url;
}
</script>
<br />
<br />
</body>
</html>
