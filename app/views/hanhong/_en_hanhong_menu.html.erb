
  <% for leftmenu in EnCategory.hanhongmenu(@nid.slice(0,3)) %>

  <% case @nid.slice(0,3).to_s
  when "001" %>
  <li><%= link_to leftmenu.categoryname, {:controller => 'hanhong', :action => 'en_about',:id => leftmenu.categoryid },:class => (@nid == leftmenu.categoryid ? "hover" : "") %></li>
  <% when "002" %>
  <li><%= link_to leftmenu.categoryname, {:controller => 'hanhong', :action => 'en_product',:id => leftmenu.categoryid },:class => (@nid == leftmenu.categoryid ? "hover" : "") %></li>
  <% when "003" %>
  <li><%= link_to leftmenu.categoryname, {:controller => 'hanhong', :action => 'en_market',:id => leftmenu.categoryid },:class => (@nid == leftmenu.categoryid ? "hover" : "") %></li>
  <% when "004" %>
  <li><%= link_to leftmenu.categoryname, {:controller => 'hanhong', :action => 'en_technology',:id => leftmenu.categoryid },:class => (@nid == leftmenu.categoryid ? "hover" : "") %></li>
  <% when "005" %>
  <li><%= link_to leftmenu.categoryname, {:controller => 'hanhong', :action => 'en_news',:id => leftmenu.categoryid },:class => (@nid == leftmenu.categoryid ? "hover" : "") %></li>
  <% when "006" %>
    <% if leftmenu.categoryid.to_s == "006005" %>
    <li><%= link_to leftmenu.categoryname, {:controller => 'hanhong', :action => 'en_download',:id => leftmenu.categoryid },:class => (@nid == leftmenu.categoryid ? "hover" : "") %></li>
    <% else %>
    <li><%= link_to leftmenu.categoryname, {:controller => 'hanhong', :action => 'en_service',:id => leftmenu.categoryid },:class => (@nid == leftmenu.categoryid ? "hover" : "") %></li>
    <% end %>
  <% end %>

  <% end %>