<div class="col2">
    <div class="Ptitle">
      <h1><%=@title%></h1>
    </div>
    <div class="contentTxt">
      <div><img src="/images/hanhong/news_top.gif" alt="" /></div>
        <ul class="nlist" id="msg_errors" runat="server" enableviewstate="false">
          <% for categorylist in @categorylist  %>
            <li>
              <% if !categorylist.issuedate.blank? %>
                <span class="nDate"><%=h(categorylist.issuedate.strftime("%Y-%m-%d")) %></span>
                <a href="/hanhong/news_show?id=<%=categorylist.id %>"><%=categorylist.title %></a>
              <% else %>
                <a href="/hanhong/news_show?id=<%=categorylist.id %>"><%=categorylist.title %></a>
              <% end %>
            </li>
          <% end %>
        </ul>
      <div class="pageDir">
     <%= will_paginate @categorylist,
      :inner_window => 1,
      :outer_window => 1,
      :prev_label => '上一页',
      :next_label => '下一页'
      %>
      </div>
  </div>
</div>
<div class="clear"></div>
